#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i = 0,n;
	int sum = 1;
	int ret = 0;
	scanf("%d",&n);
	for(i = 1;i<=n;i++)
	{
		sum = sum*i;
		ret = ret + sum;
	}
	printf("%d",ret);
	return 0;
}
{
	int i = 0;
	int arr[10] = {1,2,3,4,5,6,7,8,9,0};
	for(i = 0;i<=11;i++)
	{
		printf("hehe");
		arr[i] = 0;
	}
